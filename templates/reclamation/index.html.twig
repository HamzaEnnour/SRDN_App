{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}

    <!-- Export Datatable start -->
<div  >
        <div class="pd-20">
            <h4 class="text-blue h4">Reclamation index</h4>
        </div>
        <div class="container-fluid" >
            <table class="data-table table hover multiple-select-row nowrap">
                <thead>
                <tr>
                    <th >Fullname</th>
                    <th>Age</th>
                    <th>Cin</th>
                    <th>Adress</th>
                    <th>Phone</th>
                    <th>Description</th>
                    <th>Source</th>
                    <th class="table-plus datatable-nosort">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for reclamation in reclamations %}
                <tr>
                    <td>{{ reclamation.fullname }}</td>
                    <td>{{ reclamation.age }}</td>
                    <td>{{ reclamation.cin }}</td>
                    <td>{{ reclamation.adress }}</td>
                    <td>{{ reclamation.phone }}</td>
                    <td>{{ reclamation.description }}</td>
                    <td><a href="{{ asset('uploads/'~reclamation.source)}}" download="{{ reclamation.source }}">&nbsp;<i class="fa fa-file"></i>Download</a></td>
                    <td>
                        <div class="dropdown">
                            <a class="btn btn-link font-24 p-0 line-height-1 no-arrow dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                                <i class="dw dw-more"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-right dropdown-menu-icon-list">
                                <a class="dropdown-item" href="{{ path('reclamation_show', {'id': reclamation.id}) }}"><i class="dw dw-eye"></i> View</a>
                                <a class="dropdown-item" href="{{ path('reclamation_edit', {'id': reclamation.id}) }}"><i class="dw dw-edit2"></i> Edit</a>
                                <a class="dropdown-item" href="{{ path('reclamation_delete', {'id': reclamation.id}) }}"><i class="dw dw-delete-3"></i> Delete</a>
                            </div>
                        </div>
                    </td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

    <!-- Export Datatable End -->

    <a href="{{ path('reclamation_new') }}">Create new</a>
</div>
{% endblock %}


